<div id='search-bar'>
  <ul>
    <li>Recent</li>
    <li>Oldest</li>
  </ul>
</div>
<section class='content'>
  <section class="places-items">
    <% @places.each_with_index do |place, index| %>
      <article class="place-item">
        <div class='place-inner'>
          <h3>
            <%= link_to place.name, place_path(place.id) %>
          </h3>
          <div>
            <%= render partial: 'shared/score', locals: { place: place } %>
            <span class='range'>
              <%= dollar_range(place.range) %>
            </span>
          </div>
          <div class='image-box'>
            <% if place.photos.empty?  %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
            <% else %>
              <% place.photos.each do |photo| %>
                <%= image_tag(photo.picture.url, class: 'place-image') %>
              <% end %>
            <% end %>
          </div>
          <div class='place-description'>
            <%= place.description %>
          </div>
        </div>

        <div class='recommend'>
          <p>
            <span>Would you recommend?</span>
            <button class='score-btn-yes' data-place-id="<%= place.id %>">Yes</button>
            <button class='score-btn-no' data-place-id="<%= place.id %>">No</button>
          </p>
        </div>
      </article>
      <% end %>
  </section>
</section>
