<section class='content'>
  <section class="places-items">
    <% @places.each_with_index do |place, index| %>
      <article class="place-item">
        <div class='place-inner'>
          <h3><%= link_to place.name, place_path(place.id) %></h3>
          <div class='score-box'>
            <span>
              <%= render partial: 'shared/score', locals: { place: place } %>
            </span>
            <span class='range'>
              <%= dollar_range(place.range) %>
            </span>
          </div>
          <div class='image-box'>
            <% if place.photos.empty?  %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
              <%= image_tag('placeholder.png', class: 'place-image') %>
            <% else %>
              <% place.photos.each do |photo| %>
                <%= image_tag(photo.picture.url, class: 'place-image') %>
              <% end %>
            <% end %>
          </div>
          <div class='place-description'>
            <%= place.description %>
          </div>
        </div>

        <div class='recommend'>
          <p>
            <%= button_tag image_tag 'thumbs-up.png', class: 'score-btn-yes', data: {'place-id-yes' =>  place.id } %>
          </p>
          <p>
            <%= button_tag image_tag 'thumbs-down.png', class: 'score-btn-no', data: {'place-id-no' => place.id } %>
          </p>
        </div>
      </article>
      <% end %>
  </section>
</section>
