<div class='search-bar'>
  <ul>
    <li>Recent</li>
    <li>Oldest</li>
  </ul>
</div>
<section class='content'>
  <section class="places-items">
    <% @places.each_with_index do |place, index| %>
      <article class="place-item" data-place_id="<%= place.id %>">
        <div class='place-inner'>
          <div class='place-name'>
            <h3>
              <%= (index + 1) %>. <%= link_to place.name, place_path(place.id) %>
            </h3>
            <div class="place-status">
              <%= render partial: 'shared/score', locals: {place: place} %>
              <span class='range'>
                <%= dollar_range(place.range) %>
              </span>
            </div>
          </div>
          <!-- Image section -->
          <div class='images-section'></div>
          <p>
            <%= place.description %>
          </p>
        </div>

        <div class='recommend'>
          <p>
            <span>Would you recommend?</span>
            <button class='score-btn-yes'>Yes</button>
            <button class='score-btn-no'>No</button>
          </p>
        </div>
      </article>
      <% end %>
  </section>
</section>
