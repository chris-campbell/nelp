<div
<div class='search-bar'>
  <ul>
    <li>Recent</li>
    <li>Oldest</li>
  </ul>
</div>
<section class='content'>
  <section class="places-items">
    <% @places.each_with_index do |place, index| %>
      <article class='place-item'>
        <h3><%= (index + 1) %>. <%= link_to place.name, place_path(place.id) %></h3>
        <p><%= rating_for place, 'overall', cancel_hint: 'Cancel this rating!' %></p>
        <div class='images-section'></div>
        <p><%= place.description %></p>
        <p class='range'><%= dollar_range(place.range) %></p>
      </article>
    <% end %>
  </section>
</section>
