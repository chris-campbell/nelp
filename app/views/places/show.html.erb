  <!-- Places information -->
  <div class="place-information col-6 offset-3">
    <h1><%= @place.name %></h1>
    <i><%= @place.address %></i>
    <%= rating_for @place, "custome_design" %>
    <h1 class='price-range'><%= dollar_range(@place.range) %></h1>
    <br/><br/>
    <p><%= @place.description %></p>
    <p><%= @place.user.email %></p>
    <!-- Map display -->
    <div id="map"></div>
      
    <script>
      <% if @place.latitude.present? && @place.longitude.present? %>
          function initMap() {
            var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};
      
            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 14,
              center: myLatLng
            });
      
            var marker = new google.maps.Marker({
              position: myLatLng,
              map: map,
              title: 'Hello World!'
            });
          }
    </script>
        
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLrf0ZfVCi7f_y9R2ZGzUuGDzz0AL3iHQ&callback=initMap">
    </script>
    <% end %>
    <!-- Map display -->

  </div>
  <!-- Places information -->

  <!-- Places images -->
  <div class='places-images col-6 offset-3'>
    <div class='share'>
      <h4>Photos from Jake's Dilemma</h4>
      <div class="btn-group add-photo-btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-secondary text-center add-photo" data-toggle="modal" data-target="#myModal"><i class="add fa fa-plus-circle"></i><span>Add Photo</span></button>
        <button type="button" class="btn btn-secondary text-center share-btn"><span class='share-text'>Share</span><i class="share-icon fa fa-share"></i></button>
      </div>
    </div>
    <div id="film_roll">
      <% @place.photos.each_with_index do |photo, index| %>
        <%= photo.caption %>
        <div>
          <%= link_to photo.picture.to_s, data: { lightbox: 'image1'} do %>
            <%= image_tag photo.picture %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Places images -->



  <!-- Right Here -->
<%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
    <div class="modal-body">
      <%= f.input :message %>
      <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
    </div>
<% end %>

  

    
  <div class='clear'></div>
    
  <div class="booyah-box-header col-10 offset-1">
    <h1 class="float-left">Comments</h1>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#myModal">
      Add a comment
    </button>
    
    <div class='clear'></div>
    
  <div class='row'>
      <% @place.comments.each do |comment| %>
      <div class="col-10 col-sm-6 offset-1" %>
        <div>
          <blockquote>
            <% if comment.humanized_rating.present? %>
              <b><%= comment.humanized_rating %></b> -
            <% end %>
            <%= comment.message %>
            <small><%= comment.user.email %></small>
          </blockquote>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div>
              <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
                <%= f.input :caption %>
                <%= f.input :picture %>
                <%= f.submit "Add photo", class: 'btn btn-primary' %>
              <% end %>
            </div>
      </div>
    </div>
  </div>
  <!-- Modal -->


